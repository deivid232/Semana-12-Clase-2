<p id="notice"><%= notice %></p>
<div class="container">
<h1>Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="table-active">
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, type:'button', class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), type:'button', class:'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, type:'button', class:'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, type:'button', class:'btn btn-primary'%>
</div>
